{
  "name": "vorms",
  "packageManager": "pnpm@7.33.1",
  "description": "Vue Form Validation with Composition API",
  "scripts": {
    "build:core": "pnpm --filter @vorms/core build",
    "build:resolvers": "pnpm --filter @vorms/resolvers build",
    "dev": "pnpm -r --parallel run dev",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:serve": "vitepress serve docs",
    "format": "prettier --write --parser typescript \"packages/**/*.ts\"",
    "lint": "eslint './packages/**/*.{js,ts}'",
    "lint:fix": "pnpm lint --fix",
    "play": "cd playground && pnpm dev",
    "prepare": "husky install",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "publish:ci": "esno scripts/publish.ts"
  },
  "lint-staged": {
    "{packages}/**/*.{js,ts}": [
      "pnpm lint:fix",
      "pnpm format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/react",
        "react",
        "react-dom"
      ]
    }
  },
  "license": "MIT",
  "author": "Alex Liu <dsa1314@gmail.com>",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.3.0",
    "@stackblitz/sdk": "^1.8.2",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.14.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vitest/coverage-c8": "^0.26.3",
    "@vue/test-utils": "^2.3.0",
    "consola": "^2.15.3",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.3",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "rimraf": "^3.0.2",
    "rollup": "^3.17.2",
    "rollup-plugin-dts": "^5.2.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "typescript": "^4.9.5",
    "vitepress": "1.0.0-alpha.47",
    "vitest": "^0.29.0",
    "vue": "^3.2.47"
  }
}
